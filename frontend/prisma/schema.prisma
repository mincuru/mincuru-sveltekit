// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id                 Int         @id @default(autoincrement())
  modelName          String
  modelCode          String
  gradeName          String
  makerName          String
  powerTrain         PowerTrain?
  driveSystem        String
  url                String?
  imageUrl           String?
  price              Int?
  // body
  bodyType           BodyType
  bodyLength         Int?
  bodyWidth          Int?
  bodyHeight         Int?
  wheelBase          Int?
  treadFront         Int?
  treadRear          Int?
  roadClearance      Int?
  weight             Int?
  // interior
  interiorLength     Int?
  interiorWidth      Int?
  interiorHeight     Int?
  ridingCap          Int?
  //
  steering           String?
  suspensionFront    String?
  suspensionRear     String?
  breakFront         String?
  breakRear          String?
  // engine
  engineCode         String?
  engineType         String?
  cylinderNum        Int?
  cylinderLayout     String?
  valveSystem        String?
  displacement       Int?
  bore               Int?
  stroke             Int?
  compressionRatio   Float?
  maxOutputKw        Float?
  maxOutputLowerRpm  Int?
  maxOutputHigherRpm Int?
  maxTorqueNm        Float?
  maxTorqueLowerRpm  Int?
  maxTorqueHigherRpm Int?
  fuelSystem         String?
  fuelType           FuelType?
  fuelTankCap        Int?
  // performance
  minTurningRadius   Int?
  fcrWltc            Float?
  fcrWltcL           Float?
  fcrWltcM           Float?
  fcrWltcH           Float?
  fcrWltcExh         Float?
  fcrJc08            Float?
  mpcWltc            Float?
  ecrWltc            Float?
  ecrWltcL           Float?
  ecrWltcM           Float?
  ecrWltcH           Float?
  ecrWltcExh         Float?
  ecrJc08            Float?
  mpcJc08            Float?
  fuelEfficiency     String[]
}

enum PowerTrain {
  ICE
  StrHV
  MldHV
  SerHV
  PHEV
  BEV
  RexEV
  FCEV
}

enum FuelType {
  DIESEL
  REGULAR
  PREMIUM
  LPG
  BIO
  HYDROGEN
}

enum BodyType {
  SEDAN
  HATCHBACK
  CROSS_COUNTRY
  K
  COUPE
  STATION_WAGON
  SUV
  ONEBOX
  K_OPEN
  K_ONEBOX
  OPEN
  PICKUP_TRUCK
}
